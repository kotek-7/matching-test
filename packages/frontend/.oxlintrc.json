{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "plugins": ["promise", "vitest", "react", "react-perf"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "warn"
  },
  "rules": {
    "no-console": "warn",
    "typescript/no-explicit-any": "error",
    "eslint/max-lines-per-function": "off"
  },
  "ignorePatterns": ["node_modules", "dist", "build", "coverage", "*.min.js", "bun.lock"]
}
