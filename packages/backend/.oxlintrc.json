{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "plugins": ["promise", "import", "node", "vitest"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "warn"
  },
  "rules": {
    "typescript/no-explicit-any": "error"
  },
  "ignorePatterns": ["node_modules", "dist", "build", "coverage", "*.min.js", "bun.lock"]
}
